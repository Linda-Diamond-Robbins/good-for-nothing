
<!-- app/views/users/new.html.erb -->

      <!-- main-container start -->
      <!-- ================ -->
      <div class="main-container dark-translucent-bg" style="background-image:url('images/background-img-6.jpg');">
        <div class="container">
          <div class="row">
            <!-- main start -->
            <!-- ================ -->
            <div class="main object-non-visible" data-animation-effect="fadeInUpSmall" data-effect-delay="100">
              <div class="form-block center-block p-30 light-gray-bg border-clear">
                
                <h2 class="title">Sign Up</h2>

                <%= form_tag '/users', class: "form-horizontal", role: "form", method: :post do  %>
                
               <!--  THEME FORM CODE: (replaced with rails form_tag above) <form class="form-horizontal" role="form"> -->
                  <div class="form-group has-feedback">
                    <!-- LABEL FOR FORM FIELD: -->
                    <label for="inputName" class="col-sm-3 control-label">Name <span class="text-danger small">*</span></label>
                    <!-- INPUT FIELD -->
                    <div class="col-sm-8">
                      <%= text_field_tag :name, "", class: "form-control", id: "name", placeholder: "Your Name" %>
                      <!-- <input type="text" class="form-control" id=:name placeholder="Name" required> -->
                      <i class="fa fa-pencil form-control-feedback"></i>
                    </div>
                  </div>

                  <div class="form-group has-feedback">
                    <label for="inputEmail" class="col-sm-3 control-label">Email <span class="text-danger small">*</span></label>
                    <div class="col-sm-8">
                      <%= text_field_tag :email, "", class: "form-control", id: "inputEmail", placeholder: "Your Email" %>
                      <!-- <input type="email" class="form-control" id="inputEmail" placeholder="Email" required> -->
                      <i class="fa fa-envelope form-control-feedback"></i>
                    </div>
                  </div>

                  <div class="form-group has-feedback">
                    <label for="inputPassword" class="col-sm-3 control-label">Password <span class="text-danger small">*</span></label>
                    <div class="col-sm-8">
                      <%= password_field_tag :password, "", class: "form-control", id: "inputPassword", placeholder: "Your Password" %>
                      <i class="fa fa-lock form-control-feedback"></i>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-3 col-sm-8">
                      <button type="submit" class="btn btn-group btn-default btn-animated">Sign Up <i class="fa fa-check"></i></button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <!-- main end -->
          </div>
        </div>
      </div>
      <!-- main-container end -->

            