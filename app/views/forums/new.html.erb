<% if current_user %>
  <div class="section dark-bg text-muted negative-margins">
    <div class="container">
      <h3>Post to the Forum</h3>
      
      <%= form_tag "/forums", multipart: true, method: :post do %>
        <div class="row">

          <div class="col-md-4">
            <div class="form-group">
              <label class="control-label">Title</label>
              <%= text_field_tag :title, @forum.title, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4">
            <label class="control-label">Text</label>
            <div class="form-group">
              <%= text_field_tag :text, @forum.text, class: "form-control" %>
            </div>
          </div>

          <div class="col-md-4">
            <div class="form-group">
              <label class="control-label">Upload Image</label>
              <%= file_field_tag :image, class: "form-control" %>
            </div>
          </div>
        </div>
        <%= submit_tag "Submit", class: "btn btn-gray" %>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Please log in to post in the forum! </p>
<% end %>  


